<!DOCTYPE html>
<html>
    <head>
        <title>Subhelper</title>
        <meta http-equiv="content-type" Content="text/html;charset=windows-1251"> 
       <!-- scripts -->
       <script src="/js/jquery-1.9.1.js"></script>
       <!-- script src="/js/jquery-ui-1.10.3.custom.js"></script -->
       <script src="/js/sammy.js"></script>
       <script src="/js/sammy.template.js"></script>
       <script src="/js/nychos.storage.js"></script>
       <script src="/js/nychos.progressbar.js"></script>
       <script src="/js/subtitle.js"></script>
       <script src="/js/Phrase.js"></script>
       <script src="/js/Word.js"></script>
       <script src="/js/Dictionary.js"></script>
       <script src="/js/jquery.center.js"></script>
       <script src="/js/main.js"></script>
       
      
       <!-- styles -->
       <link href="/css/ui-lightness/jquery-ui-1.10.3.custom.css" rel="stylesheet" type="text/css" />
       <link href="/css/main.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div id="wrapper">
            <div id="header">
                <div id="logo">Subhelper</div>
                <div id="uploadSubtitle">
                    <form name="upload_big" id="upload_big" class="uploaderForm" method="post" enctype="multipart/form-data" action="index/upload" target="upload_target">
                        <div class="fileWrapper">
                                <a class="fileButton">Upload image</a>
                                <input name="subtitle" id="file" class="fileInput" size="27" type="file" />	
                        </div>        
                        <input type="submit" name="action" value="Upload Image now" class="inputSubmit" />
                    </form>
                    <div id="notice" class="notice">Wait...</div>
                     <!-- hidden iframe begin -->
                        <iframe id="upload_target" name="upload_target" src=""></iframe>
                    <!-- hidden iframe end -->
                </div>
            </div>
            <div id="phrasesProgressBar"></div>
            <div id="aside">
                <select id="sortByStatus">
                    <option value="all">All</option>
                    <option value="process">Process</option>
                    <option value="waiting">Waiting</option>
                    <option value="done">Done</option>
                </select>
                <div class="sortSwitcher">	
                        <input type="checkbox" value="None" id="sortSwitcher" name="check" />
                        <label for="sortSwitcher"></label>
                </div>
                <div id="lightning">
                    <img src="/img/lightning.png" />
                    <span id="lightningCounter"></span>
                </div>
            </div>
            <div id="content">
                this is a content
            </div>
        </div>
        <div id="shadow"><img src="/img/preloading.gif" /><h3>Loading...</h3></div>
        <script src="/js/uploadingSubtitle.js"></script>
    </body>
</html>
